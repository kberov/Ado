#!/bin/bash
ADO_HOME=$(readlink -f $(dirname $0)/..)
echo "\$ADO_HOME is $ADO_HOME"
export PERL5LIB=$ADO_HOME/lib
echo "perltidy Ado source code------------"

perltidy -pro=$ADO_HOME/t/.perltidyrc \
  $ADO_HOME/Build.PL $ADO_HOME/bin/ado \
  `find $ADO_HOME/etc -name '*.conf'`\
  `find $ADO_HOME/lib -name '*.pm'`\
  `find $ADO_HOME/bin -name '*.pl'`\
  `find $ADO_HOME/t -name '*.t'`
rm -rf `find $ADO_HOME -name '*.bak'`
echo "perltidy done ----------------------"
